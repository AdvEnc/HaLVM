prefix=@prefix@
exec_prefix=@exec_prefix@
bindir=@bindir@
libdir=@libdir@/HaLVM/@PACKAGE_VERSION@

GHCBIN="${libdir}/bin/@target_prefix@ghc"
#LIBDIROPT="-B${libdir}"
